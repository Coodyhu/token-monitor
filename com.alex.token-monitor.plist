<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.alex.token-monitor</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/aaa/.venv/bin/python3</string>
        <string>/Users/aaa/projects/token-monitor/cron_report.py</string>
        <string>send</string>
    </array>

    <!-- 每天 21:00 执行 -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>21</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>WorkingDirectory</key>
    <string>/Users/aaa/projects/token-monitor</string>

    <key>StandardOutPath</key>
    <string>/tmp/token-monitor.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/token-monitor.log</string>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
